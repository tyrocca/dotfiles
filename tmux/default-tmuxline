set -g status-right "#[fg=#7c6f64,bg=#504945,nobold,nounderscore,noitalics]#[fg=#282828,bg=#7c6f64,bold] %Y-%m-%d  %H:%M #[fg=#282828,bg=#7c6f64,nobold,nounderscore,noitalics]#[fg=#7c6f64,bg=#282828,bold] #h "
